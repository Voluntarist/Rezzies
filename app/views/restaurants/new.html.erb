<h1> ADD A RESTAURANT HERE! </h1>

<%= form_for @restaurant do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :address %><br>
  <%= f.text_field :address %><br>

  <%= f.label :capacity %><br>
  <%= f.number_field :capacity %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description %><br>

  <h4> select a category </h4>
  <%= f.select :category_id, options_from_collection_for_select(Category.find(:all), "id", "name") %>

  <%= f.submit %>
<% end %>